<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_room_navigation"
    app:startDestination="@id/chatRoomFragment">

    <fragment
        android:id="@+id/chatRoomFragment"
        android:name="com.mikirinkode.firebasechatapp.feature.chat.fragment.ConversationFragment"
        android:label="ChatRoomFragment" >
        <action
            android:id="@+id/actionOpenImage"
            app:destination="@id/fullScreenImageFragment" />
        <action
            android:id="@+id/actionShowMessageInfo"
            app:destination="@id/messageInfoFragment" />
        <action
            android:id="@+id/actionOpenGroupProfile"
            app:destination="@id/groupProfileFragment" />
        <argument
            android:name="conversationId"
            android:defaultValue=""
            app:nullable="true"
            app:argType="string"/>
        <argument
            android:name="conversationType"
            android:defaultValue=""
            app:argType="string"/>
        <argument
            android:name="interlocutorId"
            android:defaultValue=""
            app:nullable="true"
            app:argType="string"/>
        <argument
            android:name="navigateFrom"
            app:argType="string"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/fullScreenImageFragment"
        android:name="com.mikirinkode.firebasechatapp.feature.chat.fragment.FullScreenImageFragment"
        android:label="fragment_full_screen_image"
        tools:layout="@layout/fragment_full_screen_image" >

        <argument
            android:name="imageUrl"
            app:argType="string" />
        <argument
            android:name="messageOnImage"
            app:argType="string" />
        <argument
            android:name="dateSent"
            app:argType="long" />
        <argument
            android:name="senderName"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/messageInfoFragment"
        android:name="com.mikirinkode.firebasechatapp.feature.messageinfo.MessageInfoFragment"
        android:label="fragment_message_info"
        tools:layout="@layout/fragment_message_info" >
        <argument
            android:name="loggedUserId"
            app:argType="string" />
        <argument
            android:name="conversationType"
            app:argType="string" />
        <argument
            android:name="participantsId"
            app:argType="string[]"/>
        <argument
            android:name="chatMessage"
            app:argType="com.mikirinkode.firebasechatapp.data.model.ChatMessage" />
    </fragment>
    <fragment
        android:id="@+id/groupProfileFragment"
        android:name="com.mikirinkode.firebasechatapp.feature.groupprofile.GroupProfileFragment"
        android:label="fragment_group_profile"
        tools:layout="@layout/fragment_group_profile" >
        <argument
            android:name="conversationId"
            app:argType="string" />
        <argument
            android:name="creatorId"
            app:argType="string" />
        <argument
            android:name="participantsId"
            app:argType="string[]"/>
    </fragment>

</navigation>